<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp">

    <ImageView
        android:id="@+id/popular_img"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_weight="1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/popular1" />

    <TextView
        android:id="@+id/popular_name"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:textColor="#333333"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/popular_img"
        app:layout_constraintStart_toStartOf="@+id/popular_img"
        app:layout_constraintTop_toBottomOf="@+id/popular_img" />
    <TextView
        android:id="@+id/popular_price"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:textColor="#333333"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="@+id/popular_name"
        app:layout_constraintStart_toStartOf="@+id/popular_name"
        app:layout_constraintTop_toBottomOf="@+id/popular_name" />
    <TextView
        android:id="@+id/popular_rating"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:textColor="#333333"
        android:textSize="12sp"
        android:drawableLeft="@drawable/ic_mdi_star_rate"
        app:layout_constraintEnd_toEndOf="@+id/popular_price"
        app:layout_constraintStart_toStartOf="@+id/popular_price"
        app:layout_constraintTop_toBottomOf="@+id/popular_price" />
</androidx.constraintlayout.widget.ConstraintLayout>
